<form method="post" action="chpasswd">
    <div class="form-group row">
        <label for="pass1" class="col-sm-2 form-control-label">New Password</label>
        <div class="col-sm-10">
            <input type="password" name="password" class="form-control" id="pass1" placeholder="Password">
        </div>
    </div>
    <div class="form-group row">
        <label for="pass2" class="col-sm-2 form-control-label">Confirm New Password</label>
        <div class="col-sm-10">
            <input type="password" name="passwordc" class="form-control" id="pass2" placeholder="Password">
        </div>
    </div>
    <div class = "divform">
        <button type="submit" class="button">
            <i class="fa fa-key"></i> Change Password
        </button>
    </div>
</form>
<div class = "divform">
    {{#if message}}
        <i class="fa fa-exclamation-triangle"></i> {{message}}
    {{/if}}
    <br>
    {{#if rules}}
        {{#each rules}}
            {{rule}}<br>
        {{/each}}
    {{/if}}
    <br>

</div>
