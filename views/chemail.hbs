<form method="post" action="chemail">
    <div class="form-group row">
        <label for="email1" class="col-sm-2 form-control-label">New Email</label>
        <div class="col-sm-10">
            <input type="email" name="email" class="form-control" id="email1" placeholder="Email">
        </div>
    </div>
    <div class="form-group row">
        <label for="email2" class="col-sm-2 form-control-label">Confirm New Email</label>
        <div class="col-sm-10">
            <input type="email" name="emailc" class="form-control" id="email2" placeholder="Email">
            <small class="text-muted">We'll never share your email with anyone else.</small>
        </div>
    </div>
    <div class = "divform">
        <button type="submit" class="button">
            <i class="fa fa-envelope-o"></i> Change Email
        </button>
    </div>
</form>


<div class = "divform">
    {{#if message}}
        <i class="fa fa-exclamation-triangle"></i> {{message}}
    {{/if}}
    <br>
    {{#if rules}}
        {{#each rules}}
            {{rule}}<br>
        {{/each}}
    {{/if}}
    <br>

</div>
