<form method="post" action="addtask">
    <div class="form-group row">
        <label for="taskT" class="col-sm-2 form-control-label">Task Title</label>
        <div class="col-sm-10">
            <input type="text" name="tasktitle" class="form-control" id="taskT" placeholder="Task Title">
        </div>
    </div>
    <div class="form-group row">
        <label for="taskDD" class="col-sm-2 form-control-label">Date Due</label>
        <div class="col-sm-10">
            <input type="date" name="datedue" class="form-control" id="taskDD">
        </div>
    </div>
    <div class="form-group row">
        <label for="taskTD" class="col-sm-2 form-control-label">Time Due</label>
        <div class="col-sm-10">
            <input type="time" name="timedue" class="form-control" id="taskTD" >
        </div>
    </div>
    <div class = "divform">
        <label for="taskBD">Task Body</label>
        <br>
        <textarea  name="taskbody" cols="30"  wrap="hard" id="taskBD"></textarea>
        <br>
        <button type="submit" class="button">
            <i class="zmdi zmdi-assignment"></i>  Add  Task
        </button>
    </div>
</form>
<div class = "divform">
    {{#if message}}
        <i class="fa fa-exclamation-triangle"></i> {{message}} <br>
    {{/if}}
    {{#if rules}}
        {{#each rules}}
            {{rule}}<br>
        {{/each}}
    {{/if}}
</div>
